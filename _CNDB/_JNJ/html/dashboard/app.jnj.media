from   __future__ import division

Style_File  ("/media/GTW/css/font-awesome.css")
Style_File  ("/media/GTW/css/pure.css")
Style_File  ("/media/GTW/css/grids-responsive.css")
Style_File  ("/media/GTW/css/leaflet.css")

style_sheet = Style_Sheet \
    ( Rule
        ( "*", "*:before", "*:after"
        , Box (sizing = "border-box")
        )
    , Rule
        ( "a"
        , color                = "#0088CC"
        , text_decoration      = "none"
        )
    , Rule
        ( "body"
        , color                = "#333333"
        )
    , Rule
        ( "footer", ".main"
        , clear                = "both"
        , margin               = TRBL (0, Em (2.0))
        )
    , Rule
        ( "footer"
        , border_top           = "1px solid #EEEEEE"
        , font_size            = Em (0.8)
        , opacity              = 0.75
        , padding_top          = Em (1.0)
        , children             =
            ( Rule
                ( "p"
                , line_height          = Rem (1.5)
                , margin               = 0
                , padding              = 0
                , vertical_align       = "bottom"
                )
            )
        )
    , Rule
        ( "form.login"
        , children             =
            [ Rule
                ( "button[type=submit]"
                , border_radius    = Em ( 1/4)
                , margin_left      = Em ( 1.5)
                , width            = Em (15.0)
                , children         =
                    [ Rule
                        ( "i.fa"
                        , float    = "left"
                        )
                    ]
                )
            , Rule
                ( "legend"
                , font_size    = Em  (1.25)
                , font_weight  = "bold"
                , margin_top   = Rem (1.00)
                )
            ]
        )
    , Rule
        ( "header"
        , height               = Rem (2.75)
        , line_height          = Rem (1.875)
        , children             =
            [ Rule
                ( "> .pure-menu"
                , padding          = TRBL (Rem (0.25), Rem (2.0), Rem (0.15))
                , z_index          = "1001 !important"
                , children         =
                    [ Rule
                        ( ".pure-menu-auto-open > a:first-child:after"
                        , content          = "'\\25BE'" ### "▾"
                        , padding_left     = Em (0.5)
                        )
                    , Rule
                        ( ".pure-menu-auto-open:hover > ul"
                        , left             = Em (0)
                        , top              = Em (1.5)
                        , visibility       = "visible"
                        , children         =
                            [ Rule
                                ( "> li"
                                , padding_left = Em (1.0)
                                , children     =
                                    [ Rule_Pseudo
                                        ( "first-child:before"
                                        , padding_top      = Em (1.5)
                                        )
                                    , Rule_Pseudo
                                        ( "last-child:after"
                                        , padding_bottom   = Em (1.5)
                                        )
                                    ]
                                )
                            ]
                        )
                    , Rule_Class
                        ( "pure-menu-horizontal"
                        , children         =
                            [ Rule_Child
                                ( ".nav-menu-person", ".pure-menu-heading", "ul"
                                , vertical_align   = "top"
                                )
                            ]
                        )
                    , Rule
                        ( ".dashboard"
                        , font_size        = Em  (1.15)
                        , padding          = TRBL (Rem (0.1), Rem (0.5), 0, 0)
                        , text_transform   = "none"
                        )
                    , Rule
                        ( "li a"
                        , font_size        = Em (0.875)
                        , padding          = TRBL (Em (0.3), Em (0.8))
                        )
                    , Rule
                        ( ".nav-menu-person"
                        , float            = "right"
                        , font_size        = Em (0.8)
                        , children         =
                            [ Rule
                                ( "a"
                                , border_radius    = Px (3)
                                , display          = "inline-block"
                                , vertical_align   = "middle"
                                )
                            , Rule
                                ( "form.logout"
                                , display          = "inline-block"
                                , padding          = 0
                                )
                            , Rule
                                ( ".settings"
                                , padding          = TRBL (Rem (0), Rem (3/4))
                                , margin_right     = Em (1.0)
                                , children         =
                                    [ Rule
                                        ( ".fa"
                                        , font_size        = Rem (1.75)
                                        )
                                    ]
                                )
                            ]
                        )
                    ]
                )
            ]
        )
    , Rule
        ( ".align-center"
        , clear          = "both"
        , text_align     = "center"
        )
    , Rule
        ( ".align-left"
        , text_align     = "left"
        )
    , Rule
        ( ".align-right"
        , text_align     = "right"
        )
    , Media.Rule
        ( Media.Query ("screen", P.breakpoint.narrow)
        , Media.Query ("screen", P.breakpoint.small_device)
        , rules               =
            [ Rule
                ( "footer", ".main"
                , margin               = TRBL (0, Em (1.0))
                )
            , Rule
                ( "header > .pure-menu"
                , padding          = TRBL (Rem (0.25), Rem (1.0), Rem (0.15))
                , children         =
                    [ Rule
                        ( ".nav-menu-links"
                        , children             =
                            [ Rule
                                ( "> li"
                                , display      = "none"
                                , visibility   = "hidden"
                                )
                            , Rule_Pseudo
                                ( "hover > li"
                                , display      = "block"
                                , visibility   = "visible"
                                )
                            , Rule_Pseudo
                                ( "before"
                                , color        = "#999999"
                                , content      = "'\\2630'" ### "☰"
                                , font_size    = Rem (1.5)
                                )
                            ]
                        )
                    ]
                )
            ]
        )
    , Rule
        ( ".app"
        , children             =
            [ Rule
                ( "[class^=pure-u-]"
                , overflow     = "auto"
                )
            , Rule
                ( "h2"
                , children             =
                    [ Rule
                        ( ".fa"
                        , color        = "#0078E7"
                        , height       = Em (1.0)
                        , width        = Em (1.0)
                        )
                    , Rule
                        ( ".pure-button"
                        , border_radius    = Rem (0.25)
                        , font_size        = Rem (1.50)
                        , margin_left      = Rem (1.00)
                        , padding          = Rem (0.25)
                        )
                    ]
                )
            , Rule
                ( "table"
                , font_size            = Em (0.875)
                , max_width            = Percent (100)
                , children             =
                    [ Rule
                        ( ".feedback"
                        , background_color     = "#DFF0D8"
                        , color                = "#3C763D"
                        )
                    , Rule
                        ( "td"
                        , word_wrap    = "break-word"
                        , children     =
                            [ Rule_Class
                                ( "action"
                                , font_size    = Em (1.125)
                                , padding      = TRBL
                                    (Em (0.25), Em (0.25), 0, 0)
                                , children     =
                                    [ Rule
                                        ( "a"
                                        , border_radius    = Em (0.25)
                                        , margin           = TRBL
                                            (0, 0, Em (0.25), Em (0.25))
                                        , padding          = Em (0.25)
                                        )
                                    , Rule
                                        ( ".fa"
                                        , color        = "#0078E7"
                                        , height       = Em (1.0)
                                        , width        = Em (1.0)
                                        )
                                    , Rule
                                        ( "[data-action=undo] .fa"
                                        , color        = P.color.m_orange
                                        , width        = Em (2.75)
                                        )
                                    ]
                                )
                            , Rule_Attr
                                ( ".feedback"
                                , text_align           = "center"
                                )
                            , Rule_Attr
                                ( "[colspan]"
                                , children     =
                                    [ Rule
                                        ( ".pure-button"
                                        , display      = "inline-block"
                                        , width        = Percent (100)
                                        , children     =
                                            [ Rule
                                                ( "i.fa"
                                                , color        = "#0078E7"
                                                , float        = "left"
                                                , height       = Em (1.0)
                                                , margin_right = Em (0.5)
                                                , width        = Em (1.0)
                                                )
                                            ]
                                        )
                                    , Rule
                                        ( ".partial-type-menu"
                                        , display      = "none"
                                        , list_style   = "none"
                                        , margin       = 0
                                        , padding      = 0
                                        )
                                    ]
                                )
                            ]
                        )
                    , Rule
                        ( "th"
                        , font_weight          = "normal"
                        , word_wrap            = "break-word"
                        )
                    , Rule
                        ( "thead"
                        , background_color     = "inherit"
                        , border_bottom        = "1px solid #cbcbcb"
                        )
                    , Rule
                        ( "tbody tr"
                        , children     =
                            [ Rule_Class
                                ( "deleted"
                                , opacity          = 0.5
                                )
                            , Rule_Pseudo
                                ( "hover"
                                , background_color = "#f2f2f2"
                                )
                            , Rule_Pseudo
                                ( "target"
                                , background_color = P.color_status_good
                                )
                            ]
                        )
                    , Rule
                        ( ".number"
                        , text_align   = "right"
                        )
                    ]
                )
            , Rule
                ( ".map"
                , max_height           = "80vh"
                , min_height           = Rem (15)
                )
            ]
        )
    , Rule
        ( ".contents"
        , max_width            = Em (50)
        , children             =
            [ Rule
                ( "ul"
                , margin       = TRBL (0, 0, Rem (0.625), Rem (1.50))
                , padding      = 0
                )
            ]
        )
    , Rule
        ( ".graph a"
        , display               = "block"
        , margin_top            = Em (2)
        )
    , Rule
        ( ".node-table"
        , width                 = Percent (95)
        )
    , Rule
        ( "#messages"
        , children              =
            [ Rule
                ( ".feedback"
                , border_radius        = Px (10)
                , background_color     = "#DFF0D8"
                , color                = "#3C763D"
                , display              = "block"
                , font_size            = Em (1.0)
                , line_height          = Em (1.5)
                , margin               = TRBL (Em (0.5), 0)
                , outline              = 0
                , padding              = TRBL
                    (Em (0.5), Em (2.5), Em (0.5), Em (1.0))
                , position             = "relative"
                , text_decoration      = "none"
                , children             =
                    [ Rule
                        ( "i"
                        , display              = "block"
                        , font_size            = Em (1.5)
                        , margin_top           = Em (- 0.5)
                        , right                = Em (0.5)
                        , top                  = Percent (50)
                        , position             = "absolute"
                        )
                    ]
                )
            ]
        )
    , Rule
        ( ".badge"
        , border_radius        = Px (9)
        , display              = "inline-block"
        , font_size            = Em (0.75)
        , font_weight          = "bold"
        , line_height          = Em (1.20)
        , padding              = TRBL (Px (2), Px (9))
        , vertical_align       = "baseline"
        , white_space          = "nowrap"
        )
    , Rule
        ( ".hidden"
        , display              = "none"
        , visibility           = "hidden"
        )
    , Rule
        ( ".main"
        , margin_bottom        = Em (1.0)
        )
    , Rule
        ( ".pull-left"
        , float                = "left"
        )
    , Rule
        ( ".pull-right"
        , float                = "right"
        )
    , Rule
        ( ".pure-menu-inverse.pure-menu-open.pure-menu-horizontal"
        , background_color     = "#1B1B1B"
        , border_color         = "#252525"
        , color                = "#FFFFFF"
        , children             =
            [ Rule
                ( ".logout"
                , border_radius    = Em (0.25)
                , background_color = "#E6E6E6"
                , color            = "#333333"
                , children         =
                    [ Rule_Pseudo
                        ( "hover", "active"
                        , background_color = "#FFFFFF"
                        , color            = "#1B1B1B"
                        )
                    ]
                )
            , Rule
                ( ".pure-menu-heading"
                , color            = "#999999"
                , text_shadow      = "0 -1px 0 rgba(0, 0, 0, 0.25)"
                )
            , Rule
                ( ".pure-menu-selected a"
                , color            = "#FFFFFF"
                )
            , Rule
                ( "a"
                , color            = "#999999"
                , children         =
                    [ Rule_Pseudo
                        ( "hover", "active"
                        , background_color = "inherit"
                        , color            = "#FFFFFF"
                        )
                    , Rule_Class
                        ( "settings"
                        , children         =
                            [ Rule_Pseudo
                                ( "hover", "active"
                                , background_color = "#E6E6E6"
                                , color            = "#999999"
                                )
                            ]
                        )
                    ]
                )
            , Rule ### needed because pure.css has a rule for this selector
                ( "li"
                , background_color = "#1B1B1B"
                )
            ]
        )
    , Rule
        ( ".rotate-45-left"
        , P.Rule.rotate_45_left
        )
    , Rule
        ( ".small"
        , font_size            = Em (0.8)
        )
    , Rule
        ( ".status-failure"
        , background_color     = P.color_status_bad
        )
    , Rule
        ( ".status-success"
        , background_color     = P.color_status_good
        )
    , Rule
        ( ".status-warning"
        , background_color     = P.color_status_missing
        )
    , Rule
        ( ".map"
        , height     = "200px"
        )
    , Media.Rule
        ( Media.Query ("screen", P.breakpoint.narrow)
        , Media.Query ("screen", P.breakpoint.small_device)
        , rules               =
            [ Rule
                ( ".interface-table"
                , children              =
                    [ Rule
                        ( ".created"
                        , max_width     = Em (5)
                        )
                    , Rule
                        ( ".Device"
                        , display       = "none"
                        , visibility    = "hidden"
                        )
                    , Rule
                        ( ".ip-addresses"
                        , max_width     = Em (7)
                        )
                    , Rule
                        ( ".name"
                        , max_width     = Em (6)
                        )
                    ]
                )
            ]
        )
    )

Include     ("html/print.media")
Include     ("html/mf3.m.jnj.media")

Script      (GTW.Script._.Modernizr)
Script      (GTW.Script._.leaflet)
Script      (GTW.Script._.GTW_jq_util)
Script_File ("html/dashboard/app.js")

### __END__ html/dashboard/app.jnj.media
