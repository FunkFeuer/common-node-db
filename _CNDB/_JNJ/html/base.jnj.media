Include ("STD::html/base.jnj.media")

style_sheet = Style_Sheet \
    ( Rule
        ( ".pg_foot"
        , children       =
            [ Rule
                ( ".copyright", ".last-change", ".top-link"
                , float  = "left"
                , width  = Percent (33)
                )
            , Rule (".copyright",   text_align = "left")
            , Rule (".last-change", text_align = "right")
            , Rule (".top-link",    text_align = "center")
            ]
        )
    , Rule
        ( "#ffm-top", "#ffm-top:target"
        , background_color    = "transparent"
        , color               = RGB_X ("#BEBEBE")
        , display             = "inline-block"
        , font_size           = Px (45)
        , font_weight         = "normal"
        , line_height         = 1
        , outline             = 0
        , padding             = TRBL0 (l = Px (5), t = Px (5))
        , vertical_align      = "top"
        )
    , Rule
        ( "textarea.Long"
        , height              = Em (5)
        )
    , Rule
        ( "textarea.Very-Long"
        , height              = Em (10)
        )
    )

print_sheet = Style_Sheet \
    ( Media.Rule
        ( Media.Query ("print")
        , rules                   =
            [ Rule
                ( ".pg_foot"
                , children        =
                    [ Rule
                        ( ".copyright", ".last-change"
                        , float   = "left"
                        , width   = Percent (50)
                        )
                    , Rule
                        ( ".top-link"
                        , display         = "none"
                        , visibility      = "collapse"
                        )
                    ]
                )
            ]
        )
    , rank  = 1 << 16
    )

Script \
    ( src       = "//ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"
    , condition = "lt IE 9"
    , rank      = -1000000000
    )

Script      (CHJ.Script._.V5a_de_obfuscate_a_nospam)
JS_On_Ready (CHJ.JS_On_Ready._.V5a_de_obfuscate_a_nospam)

Script      (CHJ.Script._.V5a_externalize)
JS_On_Ready (CHJ.JS_On_Ready._.V5a_externalize)

### __END__ html/base.jnj.media
